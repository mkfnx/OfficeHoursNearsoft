<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mkfnx.officehoursnearsoft.details.VenueDetailsFragment"
    android:orientation="vertical">

    <ImageView android:id="@+id/venue_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="250dp"
        />

    <TextView android:id="@+id/venue_name_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20dp"
        />

    <TextView android:id="@+id/venue_description_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
